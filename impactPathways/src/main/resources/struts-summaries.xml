<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

  <package extends="ccafsap-default" name="summaries" namespace="/summaries">

  <action name="project" class="org.cgiar.ccafs.ap.action.summaries.ProjectSummaryAction">
      <result name="input">/WEB-INF/summaries/activitiesSummaries.ftl</result>
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">application/pdf</param>
        <param name="contentDisposition">filename="${fileName}"</param>
     </result>
   </action>
   
   
  <action  name="publication" class="org.cgiar.ccafs.ap.action.summaries.DeliverableSummaryAction">
      <result name="input">/WEB-INF/summaries/activitiesSummaries.ftl</result>
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
     </result>
   </action>
   
   <action name="projectPartnersSummary" class="org.cgiar.ccafs.ap.action.summaries.PartnersSummaryAction">
      <result name="input">/WEB-INF/summaries/activitiesSummaries.ftl</result>
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
     </result>
   </action>
   
   <action name="leadProjectInstitutionsSummary" class="org.cgiar.ccafs.ap.action.summaries.LeadInstitutionPartnersSummaryAction">
      <result name="input">/WEB-INF/summaries/activitiesSummaries.ftl</result>
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
     </result>
   </action>
   
    <action name="pwob" class="org.cgiar.ccafs.ap.action.summaries.PWOBSummaryAction">
      <result name="input">/WEB-INF/summaries/activitiesSummaries.ftl</result>
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
     </result>
   </action>

  </package>
</struts>