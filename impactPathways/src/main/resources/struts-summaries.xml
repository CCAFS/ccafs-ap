<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

  <package extends="ccafsap-default" name="summaries" namespace="/summaries">

    <action name="board" class="org.cgiar.ccafs.ap.action.summaries.SummaryBoardAction">
       <result name="input">/WEB-INF/summaries/boardSummaries.ftl</result>
     </action>
    
    <action name="project" class="org.cgiar.ccafs.ap.action.summaries.planning.ProjectSummaryAction">
      <result name="success" type="stream">
          <param name="inputName">inputStream</param>
          <param name="contentType">${contentType}</param>
          <param name="contentDisposition">filename="${fileName}"</param>
     </result>
    </action>

    <action  name="expectedDeliverables" class="org.cgiar.ccafs.ap.action.summaries.planning.DeliverablePlanningSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>

    <action name="projectPartnersSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.PartnersSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>
   
    <action name="genderContributionSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.GenderSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">${contentType}</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
     </result>
    </action>

    <action name="leadProjectPartnersSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.LeadProjectPartnersSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">${contentType}</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>

    <action name="leadProjectInstitutionsSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.LeadInstitutionPartnersSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">${contentType}</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>

    <action name="budgetPerPartnersSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.BudgetPerPartnersSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>

    <action name="budgetByMOGsSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.BudgetByMOGsSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>

    <action name="impactPathwayContributionsSummary" class="org.cgiar.ccafs.ap.action.summaries.planning.ImpactPathwayContributionsSummaryAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">text/csv</param>
        <param name="contentDisposition">attachment;filename="${fileName}"</param>
      </result>
    </action>
   
    <!-- Exporting our active partners categorized by Flagship in XML format for the CCAFS Website -->
    <action name="partnersXml" class="org.cgiar.ccafs.ap.action.summaries.PartnersXMLAction">
      <result name="success" type="stream">
        <param name="inputName">inputStream</param>
        <param name="contentType">${contentType}</param>
        <param name="contentDisposition">filename="${fileName}"</param>
      </result>
    </action> 

  </package>
</struts>
